<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyTitleBar">
        <!--标题栏高度-->
        <attr name="Easy_titleBarHeight" format="dimension" />
        <!--标题栏背景颜色-->
        <attr name="Easy_titleBarBackground" format="color" />

        <!--标题文字-->
        <attr name="Easy_title" format="string" />
        <!--标题大小-->
        <attr name="Easy_titleSize" format="dimension" />
        <!--标题颜色-->
        <attr name="Easy_titleColor" format="reference" />
        <!--标题位置-->
        <attr name="Easy_titleStyle" format="string" />

        <!--标题栏分割线的有无-->
        <attr name="Easy_lineState" format="string" />
        <!--标题栏分割线高度-->
        <attr name="Easy_lineHeight" format="dimension" />
        <!--标题栏分割线颜色-->
        <attr name="Easy_lineColor" format="color" />


        <!--左边第一个图标的有无-->
        <attr name="Easy_leftLayoutState" format="string" />
        <!--左边图标-->
        <attr name="Easy_leftImage" format="reference" />
        <!--左边文字-->
        <attr name="Easy_leftText" format="reference" />

        <!--右边图标-->
        <attr name="Easy_rightImage" format="reference" />
        <!--右边文字-->
        <attr name="Easy_rightText" format="reference" />
        <!--右边第一个图标的有无-->
        <attr name="Easy_rightLayoutState" format="string" />


    </declare-styleable>
</resources>